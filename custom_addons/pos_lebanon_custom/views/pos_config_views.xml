<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pos_config_view_form_lbp" model="ir.ui.view">
        <field name="name">pos.config.form.lbp</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='payment_section']" position="before">
                <div class="col-12 col-lg-6 o_setting_box" id="lbp_settings">
                    <div class="o_setting_left_pane">
                        <field name="display_lbp_total"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="display_lbp_total"/>
                        <div class="text-muted">
                            Show dual-currency prices (USD / LBP) throughout the POS interface.
                        </div>
                        <div invisible="not display_lbp_total" class="content-group mt-2">
                            <div class="row">
                                <label for="lbp_usd_rate" string="Exchange Rate (LBP/$)" class="col-lg-4"/>
                                <field name="lbp_usd_rate"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
