<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pos_config_view_form_lbp" model="ir.ui.view">
        <field name="name">pos.config.form.lbp</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='other_devices']" position="before">
                <setting string="Lebanon Customization" help="Show dual-currency prices (USD / LBP) throughout the POS interface.">
                    <field name="display_lbp_total"/>
                    <div class="content-group mt16" invisible="not display_lbp_total">
                        <div class="row">
                            <label for="lbp_usd_rate" string="Exchange Rate (LBP/$)" class="col-lg-4"/>
                            <field name="lbp_usd_rate"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
